<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_width"
    android:layout_height="@dimen/view_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:elevation="2dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/high_margin"
    android:id="@+id/alpha"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:clickable="true"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/low_margin"
            android:layout_marginTop="@dimen/low_margin"
            android:layout_marginRight="@dimen/low_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/top_priority"
            android:textSize="@dimen/common_font_size"
            tools:text="Product Name Lorem Ipsum lorem ipsum lorem epsum" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/low_margin"
            android:layout_marginRight="@dimen/low_margin"
            android:layout_marginBottom="@dimen/low_margin">
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50$ "
            android:textColor="@color/top_priority"
            android:textSize="@dimen/common_font_size"
            android:layout_weight="1"/>
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="52"
                android:textStyle="bold"
                android:textColor="@color/low_priority"
                android:textSize="@dimen/low_font_size"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available"
                android:textStyle="bold"
                android:textColor="@color/low_priority"
                android:textSize="@dimen/low_font_size"
                />
        </LinearLayout>
        <Button
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALE"
            android:textColor="@color/white"
            android:background="@drawable/round_bg_style"
            android:layout_marginLeft="@dimen/low_margin"
            android:layout_marginRight="@dimen/low_margin"
            android:layout_marginBottom="@dimen/low_margin"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>